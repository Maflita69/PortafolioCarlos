doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Portafolio - #{title || 'Página Principal'}
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
    // Font Awesome para iconos
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css")
    link(rel="stylesheet", href="/style.css")
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.shadow
      .container
        a.navbar-brand(href="/") Portafolio
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/") Página Principal
            li.nav-item
              a.nav-link(href="/acerca") Acerca de mí
            li.nav-item
              a.nav-link(href="/Curriculum") CV
            li.nav-item
              a.nav-link(href="/Proyectos") Proyectos  
            li.nav-item
              a.nav-link(href="/Contacto") Contacto 
          

    // Hero/Header con color personalizado
    header.custom-header
      .container.text-center
        h1.bienvenida-titulo Bienvenido a mi Portafolio
        p.bienvenida-subtitulo Explora mis proyectos, habilidades y experiencia profesional.
    // Contenido principal con fondo
    main.main-bg
      .container.py-4
        block content

    // Footer SIEMPRE al fondo y alineado
    footer.bg-dark.text-white.py-3
      .container-fluid
        .row.align-items-center
          .col-md-6.text-md-start.text-center
            p.mb-0 &copy; 2025 - Todos los derechos reservados
          .col-md-6.text-md-end.text-center.footer-icons
            a.text-white.me-2(href="https://github.com/Maflita69", title="GitHub", target="_blank")
              i.fab.fa-github
            a.text-white.me-2(href="https://www.linkedin.com/in/carlos-andres-hidalgo-namoncura-7b515335a/", title="LinkedIn", target="_blank")
              i.fab.fa-linkedin-in
            a.text-white.me-2(href="https://www.instagram.com/_c_andres_/", title="Instagram")
              i.fab.fa-instagram

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")